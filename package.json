{
  "name": "ankh",
  "displayName": "Ankh Client",
  "description": "an extension for deploying, and interacting with cairo smart contracts",
  "version": "0.1.0-beta",
  "publisher": "wilfridokorie",
  "icon": "assets/ankh_logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/OWK50GA/Ankh.git"
  },
  "homepage": "https://github.com/OWK50GA/Ankh?tab=readme-ov-file#ankh-readme",
  "bugs": {
    "url": "https://github.com/OWK50GA/Ankh/issues"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*/.cairo"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ankh",
          "title": "Ankh",
          "icon": "ankh_icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "ankh.refreshContracts",
        "title": "Refresh Contracts",
        "icon": "$(refresh)"
      },
      {
        "command": "ankh.refreshSingleContract",
        "title": "Refresh this contract",
        "icon": "$(refresh)"
      },
      {
        "command": "ankh.openContract",
        "title": "Open Contract Interface",
        "icon": "$(open-preview)"
      },
      {
        "command": "ankh.closeAllPanels",
        "title": "Close All Contract Panels",
        "icon": "$(close-all)"
      },
      {
        "command": "ankh.showActivePanels",
        "title": "Show Active Panels",
        "icon": "$(list-selection)"
      },
      {
        "command": "ankh.selectWorkspaceRoot",
        "title": "Select Cairo Workspace Root",
        "icon": "$(folder)"
      },
      {
        "command": "ankh.clearWorkspaceRoot",
        "title": "Clear Cairo Workspace Root",
        "icon": "$(clear-all)"
      },
      {
        "command": "ankh.showWorkspaceRoot",
        "title": "Show Current Workspace Root",
        "icon": "$(info)"
      },
      {
        "command": "ankh.savePrivateKey",
        "title": "Save Private Key",
        "icon": "$(key)"
      },
      {
        "command": "ankh.deletePrivateKey",
        "title": "Delete private key",
        "icon": "$(notebook-delete-cell)"
      }
    ],
    "views": {
      "ankh": [
        {
          "id": "ankh",
          "name": "Cairo Contracts Tester",
          "when": "worskpaceContains:**/*/.cairo || true",
          "icon": "sn_symbol.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ankh.refreshContracts",
          "when": "inTreeView",
          "group": "navigation"
        },
        {
          "command": "ankh.selectWorkspaceRoot",
          "when": "view == ankh",
          "group": "navigation@2"
        },
        {
          "command": "ankh.closeAllPanels",
          "when": "view == ankh",
          "group": "navigation@3"
        },
        {
          "command": "ankh.showActivePanels",
          "when": "view == ankh",
          "group": "navigation@4"
        },
        {
          "command": "ankh.refreshContracts",
          "when": "view == ankh",
          "group": "navigation@1"
        },
        {
          "command": "ankh.savePrivateKey",
          "when": "view == ankh",
          "group": "navigation@5"
        }
      ],
      "view/item/context": [
        {
          "command": "ankh.openContract",
          "when": "view == ankh && viewItem == contract || viewItem == deployedContract || viewItem === externalContract",
          "group": "inline"
        },
        {
          "command": "ankh.refreshSingleContract",
          "when": "view == ankh && viewItem == contract || viewItem == deployedContract || viewItem === externalContract",
          "group": "inline"
        }
      ]
    },
    "icons": {
      "cairo-contract": {
        "description": "Cairo contract icon",
        "default": {
          "fontPath": "./assets/icons/cairo-icons.woff",
          "fontCharacter": "\\e001"
        }
      },
      "starknet-deployed": {
        "description": "Deployed Starknet contract",
        "default": {
          "fontPath": "./assets/icons/cairo-icons.woff",
          "fontCharacter": "\\e002"
        }
      }
    },
    "configuration": {
      "title": "Ankh Client",
      "properties": {
        "ankh.rpcUrlSepolia": {
          "type": "string",
          "default": "",
          "description": "RPC URL for Sepolia (Ankh). Example: https://starknet-sepolia.public-node.xyz"
        },
        "ankh.accountAddressSepolia": {
          "type": "string",
          "default": "",
          "description": "Account address used by Ankh on Sepolia (0x... format)."
        },
        "ankh.useEnvForSecrets": {
          "type": "boolean",
          "default": false,
          "description": "If true, Ankh will read secrets (private keys) from .env instead of SecretStorage/settings."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "cd cairo-tester-ui && npm run build && cd .. && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "format": "prettier --write ."
  },
  "dependencies": {
    "prettier": "^3.4.2",
    "prettier-standalone": "^1.3.1-0",
    "starknet": "^8.5.3"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
